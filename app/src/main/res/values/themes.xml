<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITSCProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#78909C</item>
        <item name="colorPrimaryVariant">#607D8B</item>
        <item name="colorSecondary">#B0BEC5</item>
        <item name="colorSecondaryVariant">#90A4AE</item>
        <item name="android:colorBackground">#CFD8DC</item>
        <item name="colorSurface">#CFD8DC</item>
        <item name="colorOnPrimary">#CFD8DC</item>
        <item name="android:textColorPrimary">#455A64</item>
        <item name="android:textColorPrimaryInverse">#FFFFFF</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ITSCProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ITSCProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ITSCProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>