<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITSCProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_gray_400</item>
        <item name="colorPrimaryVariant">@color/blue_gray_500</item>
        <item name="colorSecondary">@color/blue_gray_200</item>
        <item name="colorSecondaryVariant">@color/blue_gray_300</item>
        <item name="android:colorBackground">@color/blue_gray_100</item>
        <item name="colorSurface">@color/blue_gray_100</item>
        <item name="colorOnPrimary">@color/blue_gray_100</item>
        <item name="android:textColorPrimary">@color/blue_gray_700</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ITSCProject.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ITSCProject.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ITSCProject.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>